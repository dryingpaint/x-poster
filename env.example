# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OpenAI
OPENAI_API_KEY=sk-...

# Embeddings / Reranker
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DIM=1024
RERANKER_MODEL=BAAI/bge-reranker-large

# Web Search (choose primary; keep both keys for fallback)
EXA_API_KEY=your-exa-key
SERPER_API_KEY=your-serper-key
FIRECRAWL_API_KEY=your-firecrawl-key

# Search Provider (primary)
PRIMARY_SEARCH_PROVIDER=exa  # or 'serper'

# Optional: Redis for caching
REDIS_URL=redis://localhost:6379/0

# Performance tuning
WEB_FETCH_TIMEOUT=6
INTERNAL_QUERY_TIMEOUT=3
MAX_CONCURRENT_FETCHES=10

# Retrieval parameters
INTERNAL_TOP_K=50
WEB_TOP_K=50
FINAL_TOP_K=8
RERANK_K=12

# Generation parameters
MAX_THREAD_TWEETS=6
DEFAULT_MAX_VARIANTS=3
FACT_CHECK_TEMPERATURE=0.1
WRITER_TEMPERATURE=0.7

# Cache TTL (seconds)
WEB_CACHE_TTL=86400  # 24 hours

